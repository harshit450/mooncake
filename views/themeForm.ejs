<%-include("header")-%>
<div class="content">

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">


        <div class="row justify-content-center">
          <div class="col-md-6">

            <h3 class="heading mb-4">Let's talk about your company!</h3>


            <p><img src="images/undraw-contact.svg" alt="Image" class="img-fluid"></p>


          </div>
          <div class="col-md-6">
            <p style="font-weight:bold;">Add theme-</p>

            <form class="mb-5" id="myForm" method="post" onsubmit="isSuccess()" action="/posttheme" enctype="multipart/form-data">

              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="text" class="form-control" name="title" id="name" placeholder="Theme Title" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="text" class="form-control" name="description" id="email" placeholder="Description" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="text" class="form-control" name="price" id="companyName" placeholder="Price" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="text" class="form-control" name="url" id="product" placeholder="Url" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="file" class="form-control" name="thumbnail"  placeholder="Thumbnail" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <textarea class="form-control" name="details" id="details" cols="30" rows="8" placeholder="Details of your company (optional)"></textarea>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <select name="type" style="width:120px;" >
                    <option value="Educational">Educational</option>
                    <option value="Sports">Sports</option>
                    <option value="E-Commerce">E-Commerce</option>
                    <option value="Portfolio">Portfolio</option>
                    <option value="Service">Service</option>
                    <option value="Nonprofit">Nonprofit</option>
                    <option value="Infopreneur">Infopreneur</option>
                    <option value="Agriculture">Agriculture</option>
                    <option value="construction">construction</option>
                    <option value="Food">Food</option>
                    <option value="Medic">Medic</option>
                    <option value="Fishing">Fishing</option>
                    </select>
                  </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <button type="submit" style="margin-top:20px;" value="Send Message" class="btnn btnn-primary rounded-0 py-2 px-4">Submit</button>

                  <span class="submitting"></span>
                </div>
              </div>
            </form>

            <div id="form-message-warning mt-4"></div>
            <div id="form-message-success">
              Your message was sent, thank you!
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="album py-5 bg-light">

    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% array.forEach(t => {%>
          <div class="col">
            <div class="card shadow-sm">
              <div class="themePreview">
              <img  src="data:image/jpeg;charset=utf-8;base64,<%=t.thumbnail.toString('base64')%>" style="width: 360px;height:225px" alt="" >
              </div>
              <div class="card-body">

                <form  action="/delete" method="post">
                  <p style="font-weight:bold;"   ><%=t.title%></p>
                  <input type="hidden" name="title" value="<%=t.title%>">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <button type="submit" name="url" class="btn btn-sm btn-outline-secondary" value="<%=t.url%>" >Delete</button>
                    <a class="btn btn-sm btn-dark" target="_blank" href="<%=t.url%>">preview</a>
                  </div>
                </div>
                </form>
                <form  action="/themeupdate" method="post">
                  <button style="margin-top: 2px;" type="submit" name="id" class="btn btn-sm btn-outline-secondary" value="<%=t._id%>" >update</button>
                </form>
              </div>
            </div>
          </div>
        <%})%>

      </div>
    </div>

  </div>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
 function isSuccess(success){


    swal("Success!", "Please go back to home for more!", "success");
  //  document.getElementById("myForm").reset();

}



</script>
<%-include("footer")-%>
