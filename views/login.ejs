<%-include("header")-%>
<% if(messages.reg) { %>
  <h5 style=" color: green; text-align: center;"><img style='height: 30px;' src="images/success-icon.png"><%= messages.reg %></h5>
<% } %>
<% if(messages.error) { %>
  <h5 style=" color: red; text-align: center;"><%= messages.error %></h5>
<% } %>
<div class="content mob-space">
            
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">


        <div class="row justify-content-center">
          <div class="col-md-6">
              
            <h3 class="heading mb-4">Login to your account now!</h3>
            <h5>Don't have an account! - <a style="color: blue; text-decoration: none;" href="register">Register Now</a>.</h5>
          </div>
          <div class="col-md-6">
            <form class="mb-5" id="myForm" method="post" action="/login">
              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="email" class="form-control" name="email" id="username" placeholder="User email" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="password" class="form-control" name="password" id="password" placeholder="Password" minlength="6" required>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <button type="submit" class="btnn btnn-primary rounded-0 py-0 px-3">Login</button>
                </div>
              </div>
            </form>

            <div id="form-message-warning mt-4"></div>
            <div id="form-message-success">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<style>
  @media(max-width:991px)
      {
       .mob-space{
       padding: 2rem 0;
     }
   }
 </style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<%-include("footer")-%>
